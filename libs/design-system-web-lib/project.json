{
  "name": "design-system-web-lib",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/design-system-web-lib/src",
  "prefix": "ds",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/design-system-web-lib/ng-package.json",
        "tailwindConfig": "libs/design-system-web-lib/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/design-system-web-lib/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/design-system-web-lib/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/design-system-web-lib/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/design-system-web-lib/.storybook",
        "browserTarget": "design-system-web-lib:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/design-system-web-lib",
        "configDir": "libs/design-system-web-lib/.storybook",
        "browserTarget": "design-system-web-lib:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/design-system-web-lib/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "design-system-web-lib:build-storybook",
        "staticFilePath": "dist/storybook/design-system-web-lib",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "design-system-web-lib:build-storybook:ci"
        }
      }
    }
  }
}
